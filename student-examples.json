  "studentResponseExample": {
    "_id": "f0e9d8c7-b6a5-4f3e-2d1c-0b9a8d7c6b5a",
    "name": "Jane Doe",
    "enrollment": "2025010456",
    "email": "jane.doe@example.com",
    "course_curriculum": "Software Engineering 2025",
    "phoneNumbers": [
      {
        "ddd": 51,
        "number": 912345678,
        "description": "Mobile"
      }
    ],
    "classes": [
      "a1b2c3d4-e5f6-7890-1234-567890abcdef",
      "b2c3d4e5-f6a7-8901-2345-67890abcdef1"
    ]
  },
  "apiEndpoints": [
    {
      "method": "POST",
      "path": "/students",
      "description": "Creates a new student.",
      "body": {
        "$ref": "student-schemas.json#/createStudentRequest"
      },
      "response": {
        "201": {
          "description": "Student created successfully.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "student-schemas.json#/studentResponse"
              }
            }
          }
        }
      }
    },
    {
      "method": "GET",
      "path": "/students",
      "description": "Retrieves a list of all students.",
      "response": {
        "200": {
          "description": "A list of students.",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "student-schemas.json#/studentResponse"
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "GET",
      "path": "/students/{id}",
      "description": "Retrieves a specific student by their ID.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "response": {
        "200": {
          "description": "The requested student.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "student-schemas.json#/studentResponse"
              }
            }
          }
        }
      }
    },
    {
      "method": "PUT",
      "path": "/students/{id}",
      "description": "Updates an existing student's information.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "body": {
        "$ref": "student-schemas.json#/updateStudentRequest"
      },
      "response": {
        "200": {
          "description": "Student updated successfully.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "student-schemas.json#/studentResponse"
              }
            }
          }
        }
      }
    },
    {
      "method": "DELETE",
      "path": "/students/{id}",
      "description": "Deletes a student by their ID.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "response": {
        "204": {
          "description": "Student deleted successfully."
        }
      }
    }
  ]
}
